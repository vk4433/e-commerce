<h1 style="text-align: center; color: navy;">Admin Login</h1>

<div style="display: flex; justify-content: center; align-items: center; min-height: 50vh; background-color: #f0f8ff; padding: 20px; border-radius: 8px;">
  <%= form_with url: "/admin/login", method: :post do |form| %>
    <% if flash[:notice] %>
      <p style="color: green;"><%= flash[:notice] %></p>
    <% end %>
    <div class="field" style="margin-bottom: 10px;">
      <%= form.label :username, style: "color: #4682b4;" %>
      <%= form.text_field :username, style: "padding: 8px; border: 1px solid #ccc; border-radius: 4px; width: 100%; box-sizing: border-box;" %>
    </div>
    <div class="field" style="margin-bottom: 10px;">
      <%= form.label :password, style: "color: #4682b4;" %>
      <%= form.password_field :password, style: "padding: 8px; border: 1px solid #ccc; border-radius: 4px; width: 100%; box-sizing: border-box;" %>
    </div>
    <div class="actions" style="text-align: center;">
      <%= form.submit "Admin Login", style: "background-color: #007bff; color: white; padding: 10px 15px; border: none; border-radius: 4px; cursor: pointer;" %>
    </div>
  <% end %>
</div>