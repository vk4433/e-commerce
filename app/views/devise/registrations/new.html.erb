<div class="container vh-100 d-flex justify-content-center align-items-center bg-light">
  <div class="card col-md-6 col-lg-4 shadow-lg rounded-3 p-4">
    <h2 class="text-center mb-4 text-primary">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-3">
        <%= f.label :email, class: "form-label text-primary" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg", placeholder: "Enter your email" %>
      </div>

      <div class="mb-3">
        <%= f.label :password, class: "form-label text-primary" %>
        <% if @minimum_password_length %>
          <small class="form-text text-muted">
            (<%= @minimum_password_length %> characters minimum)
          </small>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-lg", placeholder: "Enter password" %>
      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation, class: "form-label text-primary" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-lg", placeholder: "Confirm password" %>
      </div>

      <div class="d-grid">
        <%= f.submit "Sign up", class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>

    <div class="mt-4 text-center text-muted">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
