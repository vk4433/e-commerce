<div class="container py-5">
  <div class="row justify-content-center">
    <% @items.each do |item| %>
      <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
        <div class="card h-100 shadow-md transition-all duration-300 transform hover:scale-105">
          <div style="background-color: white;">
            <%= image_tag item.main_image, class: "card-img-top", style: "height: 200px; object-fit: contain;", alt: item.name %>
          </div>
          <div class="card-body d-flex flex-column">
            <h5 class="card-title text-truncate"><%= item.name %></h5>
            <p class="card-text">
              Quantity: <%= item.unit %>
            </p>
            <p class="card-text font-weight-bold">
              Price: <%= item.price %>
            </p>
            <div class="mt-auto">
              <%= button_to 'Buy Now', line_items_path(store_id: item.id), class: "btn btn-primary w-100" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
