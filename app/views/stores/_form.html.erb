<div class="container text-center">
  <h2 class="mb-4 text-primary"><%= "Add New Store" %></h2>
  <%= form_with(model: store) do |form| %>
    <% if store.errors.any? %>
      <div class="alert alert-danger text-center" role="alert">
        <h2><%= pluralize(store.errors.count, "error") %> prohibited this store from being saved:</h2>
        <ul>
          <% store.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="mb-3">
          <%= form.label :name, class: "form-label" %>
          <%= form.text_field :name, class: "form-control form-control-sm" %>
        </div>

        <div class="mb-3">
          <%= form.label :price, class: "form-label" %>
          <%= form.text_field :price, class: "form-control form-control-sm" %>
        </div>

        <div class="mb-3">
          <%= form.label :unit, class: "form-label" %>
          <%= form.text_field :unit, class: "form-control form-control-sm" %>
        </div>

        <div class="mb-3">
          <%= form.label :category, class: "form-label" %>
          <%= form.text_field :category, class: "form-control form-control-sm" %>
        </div>

        <div class="mb-3">
          <%= form.label :main_image, class: "form-label" %>
          <%= form.file_field :main_image, class: "form-control form-control-sm" %>
        </div>

        <div>
          <%= form.submit class: "btn btn-primary btn-sm" %>
        </div>
      </div>
    </div>
  <% end %>
</div>