<p class="text-success"><%= notice %></p>

<% content_for :title, "Stores" %>

<h1 class="mb-4">Stores</h1>

<div class="container">
  <div class="row">
    <% @stores.each do |store| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <div class="card-body">
            <%= render store %>
            <%= link_to "Show this store", store, class: "btn btn-primary mt-3" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="mt-4">
  <%= link_to "New store", new_store_path, class: "btn btn-success" %>
</div>
